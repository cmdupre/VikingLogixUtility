<Window x:Class="VikingLogixUtility.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VikingLogixUtility.Views"
        xmlns:localUdt="clr-namespace:VikingLogixUtility.Views.UDT"
        xmlns:localPdt="clr-namespace:VikingLogixUtility.Views.PDT"
        xmlns:localL5xTagExport="clr-namespace:VikingLogixUtility.L5xApp.Views"
        xmlns:vm="clr-namespace:VikingLogixUtility.ViewModels"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
        Closing="Window_Closing"
        mc:Ignorable="d"
        Height="750" Width="900">
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Padding" Value="5px 2px"/>
            <Setter Property="Margin" Value="5px"/>
            <Setter Property="Width" Value="80px"/>
            <Setter Property="Height" Value="25px"/>
        </Style>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Padding" Value="2px 2px"/>
            <Setter Property="Margin" Value="5px"/>
        </Style>
        <Style TargetType="{x:Type GroupBox}">
            <Setter Property="Padding" Value="2px 2px"/>
            <Setter Property="Margin" Value="5px"/>
        </Style>
        <Style TargetType="{x:Type TabItem}">
            <Setter Property="Padding" Value="10px 3px"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TabControl
            Grid.Row="0"
            Grid.Column="0">
            <TabItem
                IsEnabled="{Binding IsRunning}"
                Header="User Defined Tags">
                <localUdt:UdtTab
                    DataContext="{Binding UdtTabVM}"
                    x:Name="ViewUdtTab"/>
            </TabItem>
            <TabItem
                IsEnabled="{Binding IsRunning}"
                Header="Predefined Tags">
                <localPdt:PdtTab
                    DataContext="{Binding PdtTabVM}"
                    x:Name="ViewPdtTab"/>
            </TabItem>
            <TabItem
                IsEnabled="{Binding IsRunning}"
                Header="L5X Tag Export">
                <localL5xTagExport:L5xTagExportTab
                    DataContext="{Binding L5xTagExportVM}"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
