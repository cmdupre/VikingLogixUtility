<UserControl x:Class="VikingLogixUtility.Views.UDT.UdtTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VikingLogixUtility.Views.UDT"
             xmlns:viewModels="clr-namespace:VikingLogixUtility.ViewModels"
             mc:Ignorable="d" 
             Loaded="UdtTab_Loaded"
             d:DesignHeight="450" d:DesignWidth="800">
    <!--
    <UserControl.DataContext>
        <viewModels:UdtTabViewModel/>
    </UserControl.DataContext>
    -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="150px" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <GroupBox
            Grid.Row="0"
            Grid.Column="0"
            BorderThickness="0">
            <local:UdtSettings/>
        </GroupBox>
        <local:UdtOptions
            Grid.Row="1"
            Grid.Column="0"/>
        <GridSplitter
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Background="AliceBlue"
            HorizontalAlignment="Center"
            Width="300px"
            ResizeDirection="Rows"
            Height="3"
            ShowsPreview="true"/>
        <local:UdtEditor
            Grid.Row="3"
            Grid.Column="0"/>
        <GroupBox 
            Header="Output" 
            Grid.Row="4" 
            Grid.Column="0">
            <TextBox
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Auto"
                Background="WhiteSmoke" 
                IsReadOnly="True"
                TextChanged="Output_TextChanged"
                Text="{Binding Output, Mode=OneWay}" 
                Padding="2px"/>
        </GroupBox>
    </Grid>
</UserControl>
