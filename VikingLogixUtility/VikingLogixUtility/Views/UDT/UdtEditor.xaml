<UserControl x:Class="VikingLogixUtility.Views.UDT.UdtEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VikingLogixUtility.Views.UDT"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <DataTemplate x:Key="CustomTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBox
                    Grid.Row="0"
                    Grid.Column="0"
                    IsReadOnly="True"
                    BorderThickness="0"
                    Padding="10px 0 10px 0"
                    VerticalContentAlignment="Center"
                    Text="{Binding Path=ReadValue}">
                    <TextBox.Style>
                        <Style TargetType="{x:Type TextBox}">
                            <Setter Property="Grid.ColumnSpan" Value="1"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=Span}" Value="True">
                                    <Setter Property="Grid.ColumnSpan" Value="3"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    Background="White"
                    Visibility="{Binding Path=Visible}"/>
                <TextBox
                    Grid.Row="0"
                    Grid.Column="2"
                    Padding="2px 0 2px 0"
                    MinWidth="20px"
                    HorizontalContentAlignment="Center"
                    Text="{Binding Path=WriteValue}"
                    Visibility="{Binding Path=Visible}"/>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <GroupBox 
        BorderThickness="0">
        <DataGrid
            Margin="0"
            Name="TagEditor"
            AutoGenerateColumns="False"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Auto"
            VirtualizingPanel.IsVirtualizing="False"
            CanUserReorderColumns="False"
            Sorting="TagEditor_Sorting"
            IsEnabled="{Binding IsNotRunning}"
            ItemsSource="{Binding Rows}"/>
    </GroupBox>
</UserControl>
