<UserControl x:Class="VikingLogixUtility.L5xApp.Views.L5xTagExportTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VikingLogixUtility.L5xApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Padding" Value="5px 2px"/>
            <Setter Property="Margin" Value="5px"/>
            <Setter Property="Width" Value="80px"/>
            <Setter Property="Height" Value="25px"/>
        </Style>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Padding" Value="2px 4px"/>
            <Setter Property="Margin" Value="5px"/>
        </Style>
        <Style TargetType="{x:Type GroupBox}">
            <Setter Property="Padding" Value="2px 2px"/>
            <Setter Property="Margin" Value="5px"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <GroupBox 
            Header="File"
            Height="130px"
            VerticalAlignment="Top"
            Grid.Row="0" 
            Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Button 
                    Grid.Row="0" 
                    Grid.Column="0" 
                    Content="L5X File:" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center" 
                    Command="{Binding Path=ClickL5XFile}" />
                <TextBox 
                    Grid.Row="0" 
                    Grid.Column="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    MinWidth="200" 
                    IsReadOnly="True" 
                    Text="{Binding L5XFilename}" 
                    ToolTip="{Binding L5XFilenameToolTip}"/>
                <Button 
                    Grid.Row="1" 
                    Grid.Column="0" 
                    Content="Export" 
                    HorizontalAlignment="Right"
                    Command="{Binding Path=ClickExport}"/>
            </Grid>
        </GroupBox>
        <GroupBox
            BorderThickness="0"
            Grid.Row="1"
            Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <TextBlock 
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0 0 10px 0"
                    xml:space="preserve">L5X Tag Exporter:
    1. Select L5X File.
    2. Select Export Options.
    3. Click Export.
                </TextBlock>
                <Image 
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="35px 0 0 0"
                    Source="/techneaux_x_32px.ico"/>
            </Grid>
        </GroupBox>
        <GroupBox 
            Header="Export Options" 
            Grid.Row="0" 
            Grid.Column="1"
            Grid.RowSpan="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <GroupBox 
                    Grid.Row="0" 
                    Grid.Column="0" 
                    Header="Select Scope(s)" 
                    Padding="5px">
                    <StackPanel>
                        <ListView 
                            MaxHeight="200px" 
                            HorizontalContentAlignment="Stretch" 
                            SelectedItem="{Binding Path=ScopeSelectedItem, UpdateSourceTrigger=PropertyChanged}" 
                            ItemsSource="{Binding ScopeListBox, NotifyOnSourceUpdated=True}" 
                            SelectionMode="Multiple">
                            <ListView.View>
                                <GridView 
                                    AllowsColumnReorder="False" 
                                    ColumnHeaderToolTip="Controller and Program Tags">
                                    <GridViewColumn 
                                        DisplayMemberBinding="{Binding Name}" 
                                        Header="Name" />
                                    <GridViewColumn 
                                        DisplayMemberBinding="{Binding TagCount}"
                                        Header=" Tag Count " />
                                </GridView>
                            </ListView.View>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="{x:Type ListViewItem}">
                                    <Setter Property="IsSelected" Value="{Binding Mode=TwoWay, Path=IsSelected}" />
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                        <StackPanel 
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0 5px 0 0">
                            <Button 
                                Command="{Binding Path=ClickSelect}"
                                CommandParameter="ALL"
                                Content="Select All"/>
                            <Button 
                                Command="{Binding Path=ClickSelect}"
                                CommandParameter="NONE"
                                Content="Select None"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <GroupBox
                    BorderThickness="0"
                    Grid.Row="0"
                    Grid.Column="1"
                    Grid.ColumnSpan="2">
                    <GroupBox
                        BorderThickness="0">
                        <StackPanel>
                            <CheckBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Content="Exclude Member Tags"
                                IsChecked="{Binding ExcludeMemberTags}"/>
                        </StackPanel>
                    </GroupBox>
                </GroupBox>
            </Grid>
        </GroupBox>
        <GroupBox 
            Header="Output" 
            Grid.Row="2" 
            Grid.Column="0" 
            Grid.ColumnSpan="2">
            <TextBox 
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Auto"
                Background="WhiteSmoke" 
                IsReadOnly="True"
                TextChanged="Output_TextChanged"
                Text="{Binding Output, Mode=OneWay}" 
                Padding="2px"/>
        </GroupBox>
    </Grid>
</UserControl>
